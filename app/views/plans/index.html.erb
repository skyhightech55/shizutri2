<h1>計画一覧</h1>
<%= link_to "投稿する", new_plan_path, method: :get, class:"post" %>

<% @plans.each do |plan| %>
  <div class="plan">
    <div class="plan-name">
      <%= plan.name %>
    </div>
    <div class="plan-purpose">
      <%= plan.purpose.name %>
    </div>
    <div class="plan-who">
      <%= plan.who.name %>
    </div>
    <div class="plan-spot">
      <%= plan.spot.name %>
    </div>
    <div class="plan-introduction">
      <%= plan.introduction %>
    </div>
  </div>
<% end %>